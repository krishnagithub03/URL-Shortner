<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortner</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #1a1a1a;
        color: #d4d4d4;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
      }

      h1 {
        color: #4caf50; /* Olive color */
      }

      p {
        background-color: #333;
        padding: 10px;
        border-radius: 5px;
      }

      a {
        color: #4caf50; /* Olive color */
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      form {
        background-color: #333;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        width: 100%;
        max-width: 400px;
        display: flex;
        flex-direction: column;
      }

      label {
        margin-bottom: 10px;
        font-weight: bold;
        color: #4caf50; /* Olive color */
      }

      input[type="url"] {
        padding: 10px;
        border: none;
        border-radius: 5px;
        margin-bottom: 10px;
      }

      button {
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #4caf50; /* Olive color */
        color: #1a1a1a;
        font-weight: bold;
        cursor: pointer;
      }

      button:hover {
        background-color: #4caf50;
      }

      table {
        margin-top: 20px;
        width: 100%;
        max-width: 600px;
        border-collapse: collapse;
        background-color: #333;
        border-radius: 10px;
        overflow: hidden;
      }

      th,
      td {
        padding: 15px;
        text-align: left;
        color: #d4d4d4;
      }

      th {
        background-color: #444;
      }

      tr:nth-child(even) {
        background-color: #3a3a3a;
      }

      tr:hover {
        background-color: #2a2a2a;
      }
      @media (max-width: 768px) {
        th,
        td {
          padding: 10px;
        }

        p,
        table {
          width: 95%;
        }

        form {
          width: 95%;
        }
      }

      @media (max-width: 480px) {
        th,
        td {
          display: block;
          width: 100%;
          text-align: center;
        }

        th::before,
        td::before {
          content: attr(data-label);
          float: left;
          font-weight: bold;
        }

        th,
        td {
          padding: 10px 5px;
        }

        tr {
          display: block;
          margin-bottom: 10px;
        }

        p,
        table,
        form {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <h1>URL Shortner</h1>
    <% if(locals.id){ %>
    <p>
      Your Shortened URL is :
      <a href="http://localhost:8000/url/<%= id %>" target="_blank"
        >http://localhost:8000/url/<%= id %></a
      >
    </p>
    <% } %>
    <div>
      <form method="POST" action="/url">
        <label>Enter Your Original URL</label>
        <input
          type="url"
          name="url"
          id=""
          placeholder="https://www.example.com"
        />
        <button type="submit">Generate</button>
      </form>
    </div>
    <div>
      <% if(locals.urls) { %>
      <table>
        <thead>
          <th>S. No.</th>
          <th>ShortID (http://localhost:8000/url/ShortID)</th>
          <th>Original URL</th>
          <th>Total Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url,index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.originalUrl %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } %>

      <table></table>
    </div>
  </body>
</html>
