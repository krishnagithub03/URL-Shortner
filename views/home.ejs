<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortner</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #1a1a1a;
        color: #d4d4d4;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        position: relative;
      }
      .logout-button {
        position: absolute;
        top: 20px;
        right: 20px;
        background-color: #4caf50;
        color: #1a1a1a;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
      }

      .logout-button:hover {
        background-color: #45a049;
      }
      h1 {
        color: #4caf50; /* Olive color */
      }

      p {
        background-color: #333;
        padding: 10px;
        border-radius: 5px;
      }

      a {
        color: #4caf50; /* Olive color */
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      form {
        background-color: #333;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
        width: 100%;
        max-width: 400px;
        display: flex;
        flex-direction: column;
      }

      label {
        margin-bottom: 10px;
        font-weight: bold;
        color: #4caf50; /* Olive color */
      }

      input[type="url"] {
        padding: 10px;
        border: none;
        border-radius: 5px;
        margin-bottom: 10px;
      }

      button {
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #4caf50; /* Olive color */
        color: #1a1a1a;
        font-weight: bold;
        cursor: pointer;
      }

      button:hover {
        background-color: #4caf50;
      }

      table {
        margin-top: 20px;
        width: 100%;
        max-width: 600px;
        border-collapse: collapse;
        background-color: #333;
        border-radius: 10px;
        overflow: hidden;
      }

      th,
      td {
        padding: 15px;
        text-align: left;
        color: #d4d4d4;
      }
      .icon {
        color: #d4d4d4;
        cursor: pointer;
      }

      .icon:hover {
        color: #ff0000;
      }
      .original-url {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 200px; /* Adjust based on your layout */
      }

      th {
        background-color: #444;
      }

      tr:nth-child(even) {
        background-color: #3a3a3a;
      }

      tr:hover {
        background-color: #2a2a2a;
      }
      @media (max-width: 768px) {
        th,
        td {
          padding: 10px;
        }

        p,
        table {
          width: 95%;
        }

        form {
          width: 95%;
        }
      }

      @media (max-width: 480px) {
        th,
        td {
          display: block;
          width: 100%;
          text-align: center;
        }

        th::before,
        td::before {
          content: attr(data-label);
          float: left;
          font-weight: bold;
        }

        th,
        td {
          padding: 10px 5px;
        }

        tr {
          display: block;
          margin-bottom: 10px;
        }

        p,
        table,
        form {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <button class="logout-button" onclick="handleLogout()">Logout</button>
    <h1>URL Shortner</h1>
    <% if(locals.id){ %>
    <p>
      Your Shortened URL is :
      <a href="https://krishcodes.tech/u/<%= id %>" target="_blank"
        >https://krishcodes.tech/u/<%= id %></a
      >
    </p>
    <% } %>
    <div>
      <form method="POST" action="/u">
        <label>Enter Your Original URL</label>
        <input
          type="url"
          name="url"
          id=""
          placeholder="https://www.example.com"
        />
        <button type="submit">Generate</button>
      </form>
    </div>
    <div>
      <% if(locals.urls) { %>
      <table>
        <thead>
          <th>S. No.</th>
          <th>ShortID (https://krishcodes.tech/u/ShortID)</th>
          <th>Original URL</th>
          <th>Total Clicks</th>
          <th>Delete</th>
          <th>Copy</th>
        </thead>
        <tbody>
          <% urls.forEach((url,index) => { %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= url.shortId %></td>
            <td class="original-url"><%= truncateUrl(url.originalUrl,50) %></td>
            <td><%= url.visitHistory.length %></td>
            <td>
              <i
                class="fas fa-trash icon"
                onclick="deleteURL('<%= url.shortId %>')"
              ></i>
            </td>
            <td>
              <button onclick="copyToClip('<%= url.shortId %>')">Copy</button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } %>

      <table></table>
    </div>
    <script>
      function copyToClip(x) {
        try {
          navigator.clipboard.writeText("https://krishcodes.tech/u/" + x);
          alert("Copied the Clipboard");
        } catch {
          alert("Invalid Request");
        }
      }
      async function deleteURL(x) {
        try {
          const response = await fetch(`/u/${x}`, {
            method: "DELETE",
          });

          if (response.ok) {
            location.reload();
            alert("URL deleted successfully.");
          } else {
            const result = await response.json();
            alert(result.message);
          }
        } catch (error) {
          console.error("Error:", error);
          alert("An error occurred while deleting the URL.");
        }
      }
      async function handleLogout() {
        try {
          const response = await fetch(`/logout`, {
            method: "POST",
          });

          if (response.ok) {
            alert("Logged out successfully.");
            location.reload();
          }
        } catch (error) {
          console.error("Error:", error);
          alert("An error occurred while Logging Out");
        }
      }
      function truncateUrl(url, maxLength) {
        return url.length > maxLength
          ? url.substring(0, maxLength) + "..."
          : url;
      }
    </script>
  </body>
</html>
